
.text
.globl main
main:
	
scanf:
	li $v0, 4 #syscall de print string
        la $a0, prompt #conteudo para printar
        syscall
	li $v0, 5 #syscall para ler inteiros
        syscall
        move $t0,$v0 #coloca valor no registrador temporario
	andi $t1, $t0, 1
        beqz $t1, Even
        j Odd
Even:
        # Imprimir que o número é par
        li $v0, 4
        la $a0, even
        syscall
        j fim   
Odd:
        # Imprimir que o número é ímpar
        li $v0, 4
        la $a0, odd
        syscall
fim:
	li $v0,10                        # termina
        syscall
.data
prompt: .asciiz "Digite um número inteiro: "
even: .asciiz "O número é par."
odd: .asciiz "O número é ímpar."
